{
  "name": "devint-rpi-hmi-esp32-fuel--webapp",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:deploy": "npm run build && npm run deploy --prod",
    "type-check": "tsc --noEmit",
    "lint": "biome check ./src",
    "lint:fix": "biome check --write ./src",
    "lint:all": "npm run type-check && npm run lint",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest run --ui",
    "deploy": "netlify deploy --prod",
    "deploy:preview": "netlify deploy --dir=dist",
    "gcai:auto": "gcai --auto",
    "gcai:push": "gcai --auto --push"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "1.1.15",
    "@tailwindcss/vite": "4.1.14",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "lucide-react": "0.545.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-router": "7.9.3",
    "tailwind-merge": "3.3.1",
    "tailwindcss": "4.1.14",
    "zustand": "5.0.8"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.5",
    "@types/node": "22.18.8",
    "@types/react": "19.2.1",
    "@types/react-dom": "19.2.0",
    "@vitejs/plugin-react": "5.0.4",
    "netlify-cli": "23.9.1",
    "tw-animate-css": "1.4.0",
    "typescript": "5.9.3",
    "vite": "7.1.9",
    "vitest": "^3.2.4"
  }
}